{
    "$schema": "vscode://schemas/color-theme",
    "name": "breeze",
    "type": "dark",
    "include": "./tokens.json",
    "tokenColors": [
        {
            "name": "Lightest gray",
            "settings": {
                "foreground": "#eff0f1"
            },
            "scope": [
                "variable",
                "support.variable",
                "support.variable.property.js",
                "string constant.other.placeholder",
                "meta.object-literal.key.js",
                "text.html.markdown",
                "punctuation.definition.list_item.markdown",
                "markup.table"
            ]
        },
        {
            "name": "Light gray",
            "settings": {
                "foreground": "#bdc3c7"
            },
            "scope": [
                "meta.object-literal.key.js",
                "source.css support.type.property-name",
                "source.sass support.type.property-name",
                "source.scss support.type.property-name",
                "source.less support.type.property-name",
                "source.stylus support.type.property-name",
                "source.postcss support.type.property-name",
            ]
        },
        {
            "name": "Dark gray",
            "settings": {
                "foreground": "#7f8c8d"
            },
            "scope": [
                "comment",
                "comment.block.documentation.phpdoc.php keyword.other.phpdoc.php",
                "comment.block.documentation.phpdoc.php punctuation.separator.inheritance.php",
                "comment.block.documentation.phpdoc.php support.other.namespace.php",
                "comment.block.documentation.phpdoc.php support.class",
                "comment.block.documentation.phpdoc.php keyword.other",
                "text.html.markdown markup.inline.raw.markdown punctuation.definition.raw.markdown",
                "text.html.markdown meta.dummy.line-break",
                "markup.quote punctuation.definition.blockquote.markdown",
                "variable.language.fenced.markdown",
                "meta.separator",
                "punctuation.definition.block.tag.jsdoc",
                "entity.name.type.instance.jsdoc",
                "punctuation.definition.bracket",
                "variable.other.jsdoc",
                "storage.type.class.jsdoc",
                "meta.other.type.phpdoc.php punctuation",
                "punctuation.definition.comment",
                "support.type.vendored.property-name.css",
                "markup.quote",
                "markup.quote markup.italic",
                "markup.quote markup.italic punctuation.definition.italic.markdown",
                "markup.quote markup.italic string",
                "markup.quote markup.bold",
                "markup.quote markup.bold punctuation.definition.bold.markdown",
                "markup.quote markup.bold string"
            ]
        }
    ],
    "colors": {
        // Blues
        "editorCursor.foreground": "#bdc3c7",

        "tab.activeBorder": "#3daee9",
        "panelTitle.activeBorder": "#3daee9",
        "button.hoverBackground": "#3daee9",
        "list.highlightForeground": "#3daee9",

        // "tab.activeBackground": "#575b5f",
        // "tab.activeBackground": "#00000000",
        "tab.activeBackground": "#31363b",

        "extensionButton.prominentBackground": "#1d99f3",
        "extensionButton.prominentHoverBackground": "#1d99f3",
		"activityBarBadge.background": "#1d99f3",
        "badge.background": "#1d99f3",
        "pickerGroup.foreground": "#1d99f3",
        "editorSuggestWidget.highlightForeground": "#1d99f3",

        "button.background": "#2980b9",
        "selection.background": "#2980b9",

        "list.focusBackground": "#34495e",
        "list.activeSelectionBackground": "#34495e",
        "inputOption.activeBackground": "#34495e",
        "list.inactiveSelectionBackground": "#34495e",
        "editorSuggestWidget.selectedBackground": "#34495e",
        "editor.selectionBackground": "#1d99f366", // ??

        // Grays
        "badge.foreground": "#FFFFFF",

        "list.focusForeground": "#eff0f1",
        "activityBarBadge.foreground": "#eff0f1",
        "tab.activeForeground": "#eff0f1",
        "titleBar.activeForeground": "#eff0f1",

        "editor.foreground": "#afb0b3",
        "input.foreground": "#afb0b3",
        "sideBar.foreground": "#afb0b3",
        "activityBar.foreground": "#afb0b3",
        "statusBar.foreground": "#afb0b3",
        "statusBarItem.remoteForeground": "#afb0b3",

        "titleBar.inactiveForeground": "#7f8c8d",
        "editorLineNumber.activeForeground": "#7f8c8d",
        "input.placeholderForeground": "#7f8c8d",
        "gitDecoration.ignoredResourceForeground": "#7f8c8d",
        "tab.inactiveForeground": "#7f8c8d",
        "panelTitle.inactiveForeground": "#7f8c8d",
        "activityBar.inactiveForeground": "#7f8c8d",

        "focusBorder": "#65686c",

        "editorLineNumber.foreground": "#42464a",
        "editorWhitespace.foreground": "#42464a",
        "contrastBorder": "#42464a",
        "titleBar.border": "#42464a",

        "peekView.border": "#31363b",
        "editorGroup.border": "#31363b",
        "editorHoverWidget.border": "#31363b",
		"editorSuggestWidget.border": "#31363b",
        "menu.selectionBackground": "#31363b",
        "pickerGroup.border": "#31363b",
        "editor.selectionHighlightBorder": "#31363b",
        "scrollbarSlider.activeBackground": "#31363b",
        "scrollbarSlider.hoverBackground": "#31363b",
        "list.hoverBackground": "#31363b",
        "editorIndentGuide.activeBackground": "#31363b",
        "editorRuler.foreground": "#31363b",
        "scrollbarSlider.background": "#31363b",
        "titleBar.activeBackground": "#31363b",
        "titleBar.inactiveBackground": "#31363b",
        "editorOverviewRuler.border": "#31363b",
        "editorIndentGuide.background": "#31363b",
        "editorWidget.background": "#31363b",
        "statusBar.background": "#31363b",
        "statusBar.noFolderBackground": "#31363b",

        "input.border": "#42464a",
        "dropdown.border": "#42464a",
        "sideBar.background": "#2a2e32",
        "activityBar.background": "#2a2e32",
        "panel.background": "#2a2e32",
        "editorGroupHeader.tabsBackground": "#2a2e32",
		"editor.lineHighlightBackground": "#2a2e32",

        "input.background": "#232629",
        "dropdown.background": "#232629",
        "editor.background": "#232629",
        "editorWidget.border": "#232629",
        "editorGroup.emptyBackground": "#232629",
        "statusBarItem.hoverBackground": "#232629",
        "terminal.background": "#232629",
        "editorGroupHeader.tabsBorder": "#232629",
        "peekViewResult.selectionBackground": "#232629",
        "peekViewTitle.background": "#232629",
        "peekViewEditor.background": "#232629",
		"peekViewResult.background": "#232629",
        "editorSuggestWidget.background": "#232629",
        "editorHoverWidget.background": "#232629",

        "widget.shadow": "#00000050",

        // Ignored/transparent
        "statusBarItem.remoteBackground": "#00000000",
        "sideBarSectionHeader.background": "#00000000",
        "tab.inactiveBackground": "#00000000",
		"activityBar.activeBorder": "#00000000",
    }
}
