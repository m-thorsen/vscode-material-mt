{
    "$schema": "vscode://schemas/color-theme",
    "name": "materia",
    "type": "dark",
    "include": "./common.json",
    "tokenColors": [
        {
            "name": "Lightest gray",
            "settings": {
                "foreground": "#EEEEEE"
            },
            "scope": [
                "variable",
                "support.variable",
                "support.variable.property.js",
                "string constant.other.placeholder",
                "meta.object-literal.key.js",
                "text.html.markdown",
                "punctuation.definition.list_item.markdown",
                "markup.table"
            ]
        },
        {
            "name": "Light gray",
            "settings": {
                "foreground": "#BDBDBD"
            },
            "scope": [
                "meta.object-literal.key.js",
                "source.css support.type.property-name",
                "source.sass support.type.property-name",
                "source.scss support.type.property-name",
                "source.less support.type.property-name",
                "source.stylus support.type.property-name",
                "source.postcss support.type.property-name",
                "support.type",
            ]
        },
        {
            "name": "Medium gray",
            "settings": {
                "foreground": "#9E9E9E"
            },
            "scope": [
                "support.type.vendored.property-name.css",
                "markup.quote",
                "markup.quote markup.italic",
                "markup.quote markup.italic punctuation.definition.italic.markdown",
                "markup.quote markup.italic string",
                "markup.quote markup.bold",
                "markup.quote markup.bold punctuation.definition.bold.markdown",
                "markup.quote markup.bold string"
            ]
        },
        {
            "name": "Dark gray",
            "settings": {
                "foreground": "#757575"
            },
            "scope": [
                "text.html.markdown markup.inline.raw.markdown punctuation.definition.raw.markdown",
                "text.html.markdown meta.dummy.line-break",
                "markup.quote punctuation.definition.blockquote.markdown",
                "variable.language.fenced.markdown",
                "meta.separator",
                "punctuation.definition.block.tag.jsdoc",
                "entity.name.type.instance.jsdoc",
                "punctuation.definition.bracket",
                "variable.other.jsdoc",
                "storage.type.class.jsdoc",
                "comment.block.documentation.phpdoc.php keyword.other.phpdoc.php",
                "comment.block.documentation.phpdoc.php punctuation.separator.inheritance.php",
                "comment.block.documentation.phpdoc.php support.other.namespace.php",
                "comment.block.documentation.phpdoc.php support.class",
                "comment.block.documentation.phpdoc.php keyword.other"
            ]
        },
        {
            "name": "Darkest gray",
            "settings": {
                "foreground": "#616161"
            },
            "scope": [
                "comment",
                "meta.other.type.phpdoc.php punctuation",
                "punctuation.definition.comment"
            ]
        },
    ],
    "colors": {
        // Bright blue #4285f4
        // Dark blue #4285f450
        "editorCursor.foreground": "#4285f4",
        "extensionButton.prominentBackground": "#4285f4",
        "extensionButton.prominentHoverBackground": "#4285f4",
		"activityBarBadge.background": "#4285f4",
        "badge.background": "#4285f4",

        "pickerGroup.foreground": "#4285f4",
        "editorSuggestWidget.highlightForeground": "#4285f4",
        "list.highlightForeground": "#4285f4",
        "button.hoverBackground": "#4285f4",

		"selection.background": "#4285f450",
        "button.background": "#4285f450",
        "list.focusBackground": "#4285f450",
        "list.activeSelectionBackground": "#4285f450",

        "list.hoverBackground": "#424242",
        "list.inactiveSelectionBackground": "#363636",

        // Grays
        "activityBarBadge.foreground": "#FFFFFF",
        "badge.foreground": "#FFFFFF",

        "tab.activeBorder": "#BDBDBD",
        "editor.foreground": "#BDBDBD",
        "tab.activeForeground": "#E0E0E0",
        "titleBar.activeForeground": "#BDBDBD",
        "input.foreground": "#BDBDBD",

        "titleBar.inactiveForeground": "#9E9E9E",
        "sideBar.foreground": "#9E9E9E",
        "statusBar.foreground": "#9E9E9E",
        "activityBar.foreground": "#9E9E9E",

        "tab.inactiveForeground": "#757575",
        "input.placeholderForeground": "#757575",
        "editorLineNumber.activeForeground": "#757575",

        "gitDecoration.ignoredResourceForeground": "#616161",

        "pickerGroup.border": "#424242",
        "focusBorder": "#424242",
        "editorLineNumber.foreground": "#424242",
        "editorWhitespace.foreground": "#424242",
        "editor.selectionHighlightBorder": "#424242",
        "scrollbarSlider.activeBackground": "#424242",
        "scrollbarSlider.hoverBackground": "#424242",
        "editor.selectionBackground": "#424242",
        "menu.selectionBackground": "#424242",
        "editorRuler.foreground": "#424242",

        "editorSuggestWidget.selectedBackground": "#383838",
        "editorIndentGuide.activeBackground": "#383838",
        "scrollbarSlider.background": "#383838",
        "input.border": "#383838",
        "input.background": "#383838",
        "dropdown.border": "#383838",
        "dropdown.background": "#383838",
        "titleBar.activeBackground": "#383838",
        "titleBar.inactiveBackground": "#383838",

        "editorIndentGuide.background": "#36363680",

        "statusBar.noFolderBackground": "#303030",
        "editorWidget.background": "#303030",
        "editorWidget.border": "#303030",
        "activityBar.background": "#303030",
        "sideBar.background": "#303030",
        "statusBar.background": "#303030",
        "editor.background": "#303030",
        "editorGroupHeader.tabsBackground": "#303030",
        "editorGroup.emptyBackground": "#303030",
        "statusBarItem.hoverBackground": "#303030",

        "titleBar.border": "#2C2C2C",
        "editorGroup.border": "#2C2C2C",
        "sideBar.border": "#2C2C2C",
        "panel.border": "#2C2C2C",
        "statusBar.border": "#2C2C2C",
        "editorHoverWidget.border": "#2C2C2C",
		"editorSuggestWidget.border": "#2C2C2C",
        "peekView.border": "#2C2C2C",

		"editor.lineHighlightBackground": "#212121",
        "peekViewResult.selectionBackground": "#212121",
        "peekViewTitle.background": "#212121",
        "peekViewEditor.background": "#212121",
		"peekViewResult.background": "#212121",
        "editorSuggestWidget.background": "#212121",
        "editorHoverWidget.background": "#212121",

        "sideBarSectionHeader.background": "#00000000",
        "tab.activeBackground": "#00000000",
        "tab.border": "#00000000",
        "tab.inactiveBackground": "#00000000",
    }
}
